{
  "name": "nxt",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "check-types": "tsc -p . --noEmit",
    "lint": "run-p -l lint:* check-types",
    "lint:es": "eslint . --ext=ts,tsx",
    "lint:prettier": "prettier --write \"**/*.{ts,tsx}\""
  },
  "dependencies": {
    "next": "9.5.5",
    "npm-run-all": "4.1.5",
    "react": "16.14.0",
    "react-dom": "16.14.0"
  },
  "devDependencies": {
    "@types/node": "14.14.33",
    "@types/react": "16.14.5",
    "@typescript-eslint/eslint-plugin": "4.17.0",
    "@typescript-eslint/parser": "4.17.0",
    "eslint": "7.21.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-react": "7.22.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "typescript": "4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{js,css,md}": "prettier --write",
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
