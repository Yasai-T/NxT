{
  "name": "nxt",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "check-types": "tsc -p . --noEmit",
    "lint": "run-p -l lint:* check-types",
    "lint:es": "eslint . --ext=ts,tsx",
    "lint:prettier": "prettier --write \"**/*.{ts,tsx}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "10.2.3",
    "npm-run-all": "4.1.5",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/node": "14.17.3",
    "@types/react": "17.0.11",
    "@typescript-eslint/eslint-plugin": "4.27.0",
    "@typescript-eslint/parser": "4.27.0",
    "eslint": "7.28.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "5.2.0",
    "lint-staged": "10.5.4",
    "prettier": "2.3.1",
    "typescript": "4.3.2"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{js,css,md}": "prettier --write",
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
